%h1
	Enlist
= form_for(@user) do |f|
	= render 'shared/error_messages'
	.field
		= f .label :"Full Name"
		%br
		= f.text_field :name
	.field
		= f.label :email
		%br
		= f.text_field :email
	.field
		= f.label :password
		%br
		= f.password_field :password
	.field
		= f.label :password_confirmation, "Confirmation"
		%br
		= f.password_field :password_confirmation
	.actions
		= f.submit "Enlist"