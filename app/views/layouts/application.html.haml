		%title
			= title
		= csrf_meta_tag
	%body
		.container
			%header
				%h1
					redarmy.es
				%nav.round
					%ul
						%li
							= link_to "Home", '#'
						%li
							= link_to "Help", '#'
						%li
							= link_to "Sign in", '#'
			%section.round
				= yield